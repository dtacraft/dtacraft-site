{
  "baseUrl": "https://dtacraft.com",
  "sitemaps": ["main", "games", "devlog", "wiki", "press", "studio", "support"],
  "staticSitemaps": {
    "main": [
      { "path": "/", "changefreq": "weekly", "priority": 1.0 },
      { "path": "/privacy/", "changefreq": "yearly", "priority": 0.5 },
      { "path": "/terms/", "changefreq": "yearly", "priority": 0.4 },
      { "path": "/credits/", "changefreq": "yearly", "priority": 0.4 }
    ],
    "press": [
      { "path": "/press/", "changefreq": "monthly", "priority": 0.6 }
    ],
    "studio": [
      { "path": "/studio/", "changefreq": "monthly", "priority": 0.6 }
    ],
    "support": [
      { "path": "/support/", "changefreq": "weekly", "priority": 0.7 }
    ]
  },
  "autoscan": {
    "games": {
      "dir": "games",
      "changefreq": "weekly",
      "priority": 0.8,
      "exclude": ["/games/"]
    },
    "devlog": {
      "dir": "devlog",
      "changefreq": "weekly",
      "priority": 0.7,
      "exclude": []
    },
    "wiki": {
      "dir": "wiki",
      "changefreq": "weekly",
      "priority": 0.7,
      "exclude": ["/wiki/"]
    }
  }
}
